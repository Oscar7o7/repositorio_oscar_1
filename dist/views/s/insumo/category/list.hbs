<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between">
                <div>
                    <h6>{{currentPage.title}}</h6>
                </div>
                <div class="d-flex gap-3">
                    {{#each currentPage.actions}}
                        <a href="{{this.path}}" class="btn btn-sm bg-gradient-primary">{{this.label}}</a>
                    {{/each}}
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    {{#if list}}
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                {{#each currentPage.labels}}
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">{{this}}</th>
                                {{/each}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each list}}
                                <tr>
                                    <td>
                                        <div class="d-flex px-2 py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">{{this.name}} {{this.lastname}}</h6>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="text-xs font-weight-bold mb-0">{{this.createReference.name}} {{this.createReference.lastname}}</p>
                                        {{!-- <p class="text-xs text-secondary mb-0"></p> --}}
                                    </td>
                                    <td class="align-middle text-center">
                                        <span class="text-secondary text-xs font-weight-bold">{{this._count.insumo}}</span>
                                    </td>
                                    <td class="align-middle">
                                        <a href="/insumo/category/{{this.id}}/update" class="btn badge badge-sm bg-gradient-primary">actualizar</a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                        <p class="lead">{{notFoundMessage}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="card-footer py-2 d-flex justify-content-between">
                <span></span>
                <div>
                    {{#if foundPrevious}}
                        <a href="{{urlPrevious}}" class="btn btn-sm px-3 bg-gradient-primary">anterior</a>
                    {{else}}
                        <span class="btn btn-sm px-3 btn-light text-muted">anterior</span>
                    {{/if}}

                    <span class="btn btn-sm btn-light">{{countRender}}</span>

                    {{#if foundNext}}
                        <a href="{{urlNext}}" class="btn btn-sm px-3 bg-gradient-primary">siguiente</a>
                    {{else}}
                        <span class="btn btn-sm px-3 btn-light text-muted">siguiente</span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-6">
        {{>statictics/category}}
    </div>
</div>