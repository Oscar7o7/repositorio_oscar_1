
<div class="row">
    <div class="card px-0">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="card-title">
                {{#if doctor}}
                    Agendar con <strong>doctor(a) {{doctor.name}} {{doctor.lastname}}</strong>
                {{else}}
                    Debes seleccionar un doctor
                {{/if}}
            </div>
            <div>
                {{#if doctor}}
                    <span></span>
                {{else}}
                    <a href="/patient/doctor" class="btn btn-primary">Buscar doctor</a>
                {{/if}}
            </div>
        </div>
        <div class="card-body">
            {{#if doctor}}
                <div class="card">
                    <div class="card-body py-0 pt-2 d-flex justify-content-between">
                        <h3>{{doctor.name}} {{doctor.lastname}}</h3>
                        <ul class="d-flex gap-4">
                            <li style="list-style: none;">
                                <a href="/patient/doctor" class="btn btn-primary">
                                    buscar
                                    <i class="bi bi-card-list"></i>
                                </a>
                            </li>
                            <li style="list-style: none;">
                                <button class="btn btn-primary d-flex gap-2" data-toggle="modal" data-target="#modalQuoteAgend">
                                    agendar
                                    <i class="bi bi-bell-fill"></i>
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            {{#isDoctor doctor}}
                <div class="card mt-3">
                    <div class="card-body">
                        {{#if doctor.speciality}}
                            <h5>Especialidades</h5>
                            <ul>
                                {{#each doctor.speciality}}
                                    <li class="">{{this.specialityReference.name}}</li>
                                {{/each}}
                            </ul>
                        {{else}}
                            no hay especialidad
                        {{/if}}
                    </div>
                </div>

                {{#if doctor.schedule}}
                    <div class="card mt-3">

                        {{#each doctor.schedule}}
                            <div class="card-body">
                                <h5>Horario Activo</h5>

                                <p>{{this.description}}</p>
                                <div class="container">
                                    <div class="row">
                                        {{!-- {{this.}} --}}
                                        {{#each this.detail}}
                                            <div class="card col">
                                                <h5>{{this.day}}</h5>
                                                <p class="w-100 text-center border"><small>{{this.time_start}}</small></p>
                                                <p class="w-100 text-center border"><small>{{this.time_end}}</small></p>
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    no hay horario
                {{/if}}

                <div class="card mt-3">
                    <div class="card-body">
                        <h5>Direcci√≥n</h5>
                        <ul class="d-flex gap-3">
                            <a href="/address/{{doctor.addressReference.parentReference.parentReference.id}}">{{doctor.addressReference.parentReference.parentReference.description}}</a>
                            >
                            <a href="/address/{{doctor.addressReference.parentReference.id}}">{{doctor.addressReference.parentReference.description}}</a>
                            >
                            <a href="/address/{{doctor.addressReference.id}}">{{doctor.addressReference.description}}</a>
                        </ul>
                    </div>
                </div>
            {{/isDoctor}}
            {{/if}}
        </div>
    </div>
</div>
