<div class="row">
    <div class="col-12 m-auto">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between">
                <div>
                    <h6>{{currentPage.title}}</h6>
                </div>
                <div class="d-flex gap-3">
                    {{#each currentPage.actions}}
                        <a href="{{this.path}}" class="btn bg-gradient-primary">{{this.label}}</a>
                    {{/each}}
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
               <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-lg-8 m-auto"> 
                            <form action="/user/{{data.id}}/update/?next=/user" method="post" class="">
                            
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12 col-lg-6">
                                            <label>Nombre</label>
                                            <input value="{{data.name}}" type="text" class="form-control" name="name" placeholder="Nombre" />
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <label>Apellido</label>
                                            <input value="{{data.lastname}}" type="text" class="form-control" name="lastname" placeholder="Apellido" />
                                        </div>
                                        <div class="col-12">
                                            <label>Correo</label>
                                            <input value="{{data.email}}" type="email" class="form-control" name="email" placeholder="Correo" />
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <label>CÃ©dula</label>
                                            <input value="{{data.ci}}" type="number" class="form-control" name="ci" placeholder="" />
                                        </div>
                                    </div>
                                    <input type="hidden" name="rol" value="ADMIN" />
                                    <button type="submit" class="btn bg-gradient-primary mt-3">Actualizar</button>
                                </div>
                            </form>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
</div>