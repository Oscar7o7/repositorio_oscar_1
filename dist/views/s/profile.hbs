<div class="container-fluid">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('/img/curved-images/curved6.jpg'); background-position-y: 50%;">
        <span class="mask bg-gradient-primary opacity-6"></span>
    </div>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">
                        {{user.name}} {{user.lastname}}
                    </h5>
                    <p class="mb-0 font-weight-bold text-sm">
                        {{user.rol}}
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3"></div>
        </div>
    </div>
</div>

<input type="hidden" id="dataId" value="{{user.id}}" />
<input type="hidden" id="ObjectName" value="user" />
<input type="hidden" id="ObjectLabel" value="Usuario" />

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-0">Datos</h6>
                </div>
                <div class="card-body p-3">
                    <form class="" method="post" action="/user/{{user.id}}/update">

                        <label>Nombre</label>
                        <input type="text" class="form-control" name="name" placeholder="Nomber" value="{{user.name}}" />

                        <label>Apellido</label>
                        <input type="text" class="form-control" name="lastname" placeholder="Apellido" value="{{user.lastname}}" />

                        <label>Correo</label>
                        <input type="email" class="form-control" name="email" placeholder="Correo" value="{{user.email}}" />

                        <label>Cédula</label>
                        <input type="text" class="form-control" name="ci" placeholder="Nomber" value="{{user.ci}}" />

                        <button class="btn bg-gradient-primary mt-3" type="submit">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-0">Seguridad</h6>
                </div>
                <div class="card-body p-3">
                    <form class="" method="post" action="/user/{{user.id}}/password">

                        <label>Contraseña actual</label>
                        <input type="password" class="form-control" name="password" />
                        <input type="hidden" value="{{user.password}}" name="currentPassword" />

                        <label>Contraseña nueva</label>
                        <input type="password" class="form-control" name="passwordNew" />

                        <label>Repetir contraseña</label>
                        <input type="password" class="form-control" name="passwordRepeat" />

                        <button class="btn bg-gradient-primary mt-3" type="submit">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>

        {{>statictics/year}}
        {{>statictics/month}}
        
        
    </div>
</div>