<div class="container">
    <div class="row">
        {{#each cards}}
            <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                    <div class="card-body p-3">
                        <div class="row">
                            <div class="col-8">
                                <div class="numbers">
                                    <p class="text-sm mb-0 text-capitalize font-weight-bold">{{this.label}}</p>
                                    <h5 class="font-weight-bolder mb-0">{{this.count}}</h5>
                                </div>
                            </div>
                            <div class="col-4 text-end">
                                <a href="{{this.path}}" class="icon icon-shape bg-gradient-primary d-flex align-items-center  justify-content-center shadow border-radius-md">
                                    <img src="/img/logos/{{this.ico}}" style="width: 24px;" />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <div class="row mt-3">
        <div class="col-12 col-lg-6 col-xl-4 h-full">
            <form id="formUpdateQuantity" method="POST" action="/stock" class="card">
                <div class="card-body">
                    <h5 class="text-center">Actualizar Cantidad</h5>
                    <label>Insumo</label>
                    <input  class="form-control" id="searchValue" placeholder="Escribir aquí para buscar" />
                    <select class="form-control" name="insumoId" id="insumoId">
                        <option selected></option>
                    </select>
                    <label class="mt-3">Cantidad</label>
                    <input type="numbe" value="" class="form-control" name="insumoQuantity" id="insumoQuantity" />

                    <p id="alternativeText"></p>

                    <input type="hidden" id="idInsumo" name="idInsumo" value="" />
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn bg-gradient-primary mt-3 left-0">actualizar</button>
                    </div>

                    <ul class="mt-3" id="spaceQuantityForInsumo"></ul>
                </div>
            </form>
        </div>
        <div class="col-12 col-lg-6 col-xl-8 h-full">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between">
                    <div>
                        <h6>{{currentPage.title}}</h6>
                    </div>
                    <div class="d-flex gap-3">
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        {{#if list}}
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    {{!-- `Nombre`,`Creador`,`Categoria`,`Mínimo`,`Máximo`,`Cantidad`,`` --}}
                                    {{#each currentPage.labels}}
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">{{{this}}}</th>
                                    {{/each}}
                                </tr>
                            </thead>
                            <tbody>
                                {{#each list}}
                                    <tr accesskey="{{this.id}}">
                                        <td class="align-middle text-center">
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">{{this.name}}</h6>
                                                    {{!-- <p class="text-xs text-secondary mb-0">{{this.email}}</p> --}}
                                                </div>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">{{this.minStock}}</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">{{this.maxStock}}</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">{{this.quantity}}</p>
                                        </td>
                                        <td class="align-middle">
                                            <button class="btn bg-gradient-primary btn-sm goAction" data-id="{{this.id}}">actualizar</button>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{else}}
                            <p class="lead">{{notFoundMessage}}</p>
                        {{/if}}
                    </div>
                </div>
                <div class="card-footer py-2 d-flex justify-content-between">
                    <span></span>
                    <div>
                        {{#if foundPrevious}}
                            <a href="{{urlPrevious}}" class="btn btn-sm px-3 bg-gradient-primary">anterior</a>
                        {{else}}
                            <span class="btn btn-sm px-3 btn-light text-muted">anterior</span>
                        {{/if}}

                        <span class="btn btn-sm btn-light">{{countRender}}</span>

                        {{#if foundNext}}
                            <a href="{{urlNext}}" class="btn btn-sm px-3 bg-gradient-primary">siguiente</a>
                        {{else}}
                            <span class="btn btn-sm px-3 btn-light text-muted">siguiente</span>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="/js/stock.js"></script>