
<div class="modal fade" id="modalAdminUser" tabindex="-1" aria-labelledby="modalAdminUser" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modalAdminUser">Actualizar usuario</h1>
                 
            </div>

            <div class="modal-body container-fluid">
                <form action="/user/{{data.id}}/update" method="POST" class="row">

                    <div class="form-floating col-12 col-lg-6 mb-3">
                        <input class="form-control" name="name" id="inputName" value="{{data.name}}" type="text" placeholder="name@example.com" />
                        <label for="inputName">Nombre</label>
                    </div>

                    <div class="form-floating col-12 col-lg-6 mb-3">
                        <input class="form-control" name="lastname" id="inputLastname" value="{{data.lastname}}" type="text" placeholder="name@example.com" />
                        <label for="inputLastname">Apellido</label>
                    </div>

                    <div class="form-floating col-12 col-lg-6 mb-3">
                        <input class="form-control" name="ci" id="inputCi" type="text" value="{{data.ci}}" placeholder="name@example.com" />
                        <label for="inputCi">Cédula</label>
                    </div>

                    <div class="form-floating col-12 col-lg-6 mb-3">
                        <input class="form-control" disabled name="email" id="inputEmail" type="email" value="{{data.email}}" placeholder="name@example.com" />
                        <label for="inputEmail">Correo Electrónico</label>
                    </div>

                    {{#isValid data.role "DOCTOR"}}
                        <div class="form-floating col-12 col-lg-6 mb-3">
                            <input class="form-control" name="cmeg_n" id="cmeg_n" type="text" value="{{data.cmeg_n}}" placeholder="name@example.com" />
                            <label for="cmeg_n">Número de inscripción</label>
                        </div>

                        <div class="form-floating col-12 col-lg-6 mb-3">
                            <input class="form-control" name="matricula" id="matricula" type="text" value="{{data.matricula}}" placeholder="name@example.com" />
                            <label for="matricula">Matrícula</label>
                        </div>
                    {{/isValid}}

                    <div class="col-12 col-lg-6 mb-3 row gap-0">
                        <div class="form-floating col-3">
                            <select class="form-control mx-0" name="phoneCode" id="phoneCode">
                                <option selected>{{data.phoneCode}}</option>
                                <option>0412</option>
                                <option>0414</option>
                                <option>0416</option>
                                <option>0424</option>
                                <option>0426</option>
                            </select>
                            <label for="phoneCode">Código</label>
                        </div>
                        <div class="form-floating col-9">
                            <input class="form-control mx-0" name="phoneNumber" id="phoneNumber" value="{{data.phoneNumber}}" type="number" placeholder="">
                            <label for="phoneNumber">Código</label>
                        </div>
                    </div>      

                    {{#isValid data.role "DOCTOR"}}
                        {{#if speciality}}
                        <div class="form-floating col-12 col-lg-6 mb-3">
                            <select class="form-control" name="esp1" id="esp1">
                                <option selected>Selecciona una opción</option>
                                {{#each speciality}}
                                <option value="{{this.id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                            <label for="esp1">Especialidad 1</label>
                        </div>
                        <div class="form-floating col-12 col-lg-6 mb-3">
                            <select class="form-control" name="esp2" id="esp2">
                                <option selected>Selecciona una opción</option>
                                {{#each speciality}}
                                    <option value="{{this.id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                            <label for="esp2">Especialidad 2</label>
                        </div>

                        {{else}}
                            <p class="form-control">Debes crear especialidades</p>
                        {{/if}} 
                    {{/isValid}}             

                    <div class="d-flex gap-3 justify-content-end">
                         
                        <button type="submit" class="btn btn-primary">
                            <i class="{{formCreate.submit.ico}}"></i>
                            {{form.submit.text}}
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
