
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-4">
            <i class="bi bi-grid-3x3 me-1"></i>
            {{titlePag}}
            <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalCreateAddress">crear</button>
        </div>
        <form class="row">
            <input type="text" class="form-control col" name="param" value="{{filter.param}}" />
            <button type="submit" class="btn btn-primary col-2">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <div class="card-body">
                {{#if list}}
                <table id="" class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            {{#each labels}}
                                <th class="text-center">{{this}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                    {{#each list}}
                        <tr>
                            <td>{{this.description}}</td>
                            <td>{{this._count.user}}</td>
                            <td>{{this._count.children}}</td>
                            <td class="d-flex justify-content-center">
                                <a href="/address/{{this.id}}" class="btn btn-primary btn-sm mx-1">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <form action="/address/{{this.id}}/delete" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm mx-1">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                {{else}}
                    <p>{{notFoundMessage}}</p>
                {{/if}}

            
    </div>

    <div class="card-footer d-flex justify-content-between">
        <span></span>
        <ul class="d-flex justify-content-center">
            {{#if foundPrevious}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlPrevious}}">anterior</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
            
            <li class="btn" style="list-style: none;">{{countRender}}</li>

            {{#if foundNext}}
                <li class="btn btn-outline-primary" style="list-style: none;"><a style="text-decoration: none;" href="{{urlNext}}">siguiente</a></li>
            {{else}}
                <li class="" style="list-style: none;"></li>
            {{/if}}
        </ul>
    </div>
</div>
