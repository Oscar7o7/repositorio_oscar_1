<div class="row">
    <div class="col-12 m-auto">
        <div class="card mb-4">
            <div class="card-header pb-0 d-flex justify-content-between">
                <div>
                    <h6>{{currentPage.title}}</h6>
                </div>
                <div class="d-flex gap-3">
                    {{#each currentPage.actions}}
                        <a href="{{this.path}}" class="btn bg-gradient-primary">{{this.label}}</a>
                    {{/each}}
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
               <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-lg-8 m-auto"> 
                            <form action="/insumo/{{data.id}}/update/" method="post" class="">
                            
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12 col-lg-6">
                                            <label>Nombre</label>
                                            <input type="text" value="{{data.name}}" class="form-control" name="name" placeholder="Nombre" />
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <label>Categoria ({{data.categoryReference.name}})</label>
                                            <select name="categoryId" class="form-control">
                                                <option></option>
                                                {{#each category}}
                                                    <option value="{{this.id}}">{{this.name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-12">
                                            <label>Descripción</label>
                                            <textarea class="form-control" name="description">{{data.description}}</textarea>
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <label>Minimo</label>
                                            <input type="text" value="{{data.minStock}}" class="form-control" name="minStock" placeholder="10" />
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <label>Máximo</label>
                                            <input type="text" value="{{data.maxStock}}" class="form-control" name="maxStock" placeholder="100" />
                                        </div>
                                        <div class="col-12">
                                            <label>Cantidad</label>
                                            <input type="text" value="{{data.quantity}}" class="form-control" name="quantity" placeholder="0" />
                                        </div>
                                        <div class="col-12">
                                            <label>Precio unitario</label>
                                            <input type="text" value="{{data.priceUnitary}}" class="form-control" name="priceUnitary" placeholder="0" />
                                        </div>
                                    </div>
                                    <button type="submit" class="btn bg-gradient-primary mt-3">Actualizar</button>
                                </div>
                            </form>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
</div>