<body class="">

    {{> headerPublic}}

    <header class="container mt-3">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card shadow">
                    <form action="/" method="GET" class="card-body">
                        <input type="text" name="param" placeholder="Doctor" class="form-control" />
                        <button type="submit" class="mt-2 btn btn-primary">
                            <i class="bi bi-search"> Buscar</i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    {{#if speciality}}
        <main class="container-fluid mt-3">
            <div class="row">
                <h4>Resultados: {{count}}</h4>
            </div>

            <table class="table table-sm table-bordered">
                <tr>
                    <td>Nombre</td>
                    <td></td>
                    <td></td>
                </tr>
                {{#each list}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>
                            <a href="/?specialityId={{this.id}}" class="btn btn-primary">ver doctores</a>
                        </td>
                    </tr>
                {{/each}}
            </table>

        </main>
    {{else}}
        <main class="container-fluid mt-3">
            <div class="row">
                <h4>Resultados: {{count}}</h4>
            </div>
            <div class="row">
                {{#if list}}
                    {{#each list}}
                        <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-3">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h6 class="text-center" style="font-weight: 900;">Doc(a) {{this.name}} {{this.lastname}}</h6>
                                    <div class="d-flex justify-content-center gap-2">
                                        {{#each this.speciality}}
                                            <span class="text-xs py-1 px-3 rounded bg-success text-light" style="font-weight: 900;">
                                                {{this.specialityReference.name}}
                                            </span>
                                        {{else}}
                                            <span class="text-xs py-1 px-3 rounded bg-secondary text-light" style="font-weight: 900;">
                                                no tiene especialidades
                                            </span>
                                        {{/each}}
                                    </div>
                                    <div class="mt-3"></div>
                                    <ul class="w-full d-flex">
                                        <li class="mx-auto" style="">Citas: {{this._count.doctor}}</li>
                                    </ul>
                                    <div class="w-full d-flex">
                                        <a href="/p/porfolio/?id={{this.id}}" class="btn btn-warning mx-auto">
                                            <i class="bi bi-person-fill"> portafolio</i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p class="lead text-muted">No se obtuvieron resultados.</p>
                {{/if}}

                
            </div>
        </main>
    {{/if}}

</body>